@model PagedList.IPagedList<ShoppingCar.Domain.Models.Sale>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Ventas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Customer.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DateSale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().IsDeliveried)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DateDeliveried)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TotalQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TotalValue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeliveried)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDeliveried)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalValue)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.SaleId }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>

Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de: @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
    ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))

